{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "storybook-static/**"]
    },
    "dev:test": {
      "cache": false,
      "env": ["NEXT_PUBLIC_API_URL"]
    },
    "api:test": {
      "dependsOn": ["^build"]
    },
    "storybook": {
      "outputs": ["storybook-static/**"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  },
  "remoteCache": {
    "signature": true
  },
  "globalDependencies": [".env"]
}
